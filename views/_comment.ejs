<li id = "comment-<%= comment._id %>">

    <p>
        <% if(locals.user && locals.user.id == comment.user.id){%>
            <small>
                <a class = "delete-comment-button" href = "/comments/destroy/<%= comment.id %>">X</a>
            </small>
        <%}%>
        <%= comment.content %>
            <br>
            <small>
                <%= comment.user.name %>
            </small>
            <br>
            <small>
                <!-- display the likes of the post, if user is logged in, then show the links to the toggle likes, else just show the count-->
                <% if(locals.user){ %>
                    <%= comment.likes.length %>  <a href = "/likes/toggle/?id=<%=comment._id%>&type=Comment" class="toggle-like-button" data-likes = "<%= comment.likes.length %>"> Like</a>
                <% }else{ %>
                    <%= comment.likes.length %> Like
                <% } %>
            </small>
    </p>
</li>